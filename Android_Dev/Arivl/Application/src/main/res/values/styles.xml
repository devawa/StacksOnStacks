<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Arivl" parent="android:Theme.Holo.Light.DarkActionBar" >
        <item name="colorPrimary">@color/color_dark</item>
        <item name="colorPrimaryDark">@color/color_background</item>
        <item name="colorAccent">@color/color_accent</item>
        <item name="android:colorBackground">@color/color_background</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Arivl_Holo" parent="android:Theme.Holo.Light.DarkActionBar" >
        <item name="android:colorBackground">@color/color_accent</item>
    </style>

    <style name="Arivl_Dark" parent="android:Theme.Holo.Dialog" >
        <item name="android:colorBackground">@color/color_background</item>
    </style>

    <style name="Arivl_Holo_Dark" parent="android:Theme.Holo.Light.DarkActionBar" >
        <item name="android:colorBackground">@color/color_background</item>
    </style>
</resources>